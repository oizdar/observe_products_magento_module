<?xml version="1.0"?>
<config>
    <modules>
        <Clever_Subscriber>
            <version>0.1.1</version>
        </Clever_Subscriber>
    </modules>

    <frontend>
        <routers>
            <subscriber>
                <use>standard</use>
                <args>
                    <module>Clever_Subscriber</module>
                    <frontName>subscriber</frontName>
                </args>
            </subscriber>
        </routers>
        <layout>
            <updates>
                <subscriber>
                    <file>subscriber.xml</file>
                </subscriber>
            </updates>
        </layout>
    </frontend>

    <global>
        <blocks>
            <subscriber>
                <class>Clever_Subscriber_Block</class>
            </subscriber>
        </blocks>

        <models>
            <subscriber>
                <class>Clever_Subscriber_Model</class>
                <resourceModel>subscriber_resource</resourceModel>
            </subscriber>
            <subscriber_resource>
                <class>Clever_Subscriber_Model_Resource</class>
                <entities>
                    <subscriptions>
                        <table>product_subscriptions</table>
                    </subscriptions>
                </entities>
            </subscriber_resource>
        </models>

        <resources>
            <subscriber_setup>
                <setup>
                    <module>Clever_Subscriber</module>
                    <class>Clever_Subscriber_Model_Resource_Setup</class>
                </setup>
            </subscriber_setup>
        </resources>

        <helpers>
            <subscriber>
                <class>Clever_Subscriber_Helper</class>
            </subscriber>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <clever_subscriber before="Mage_Adminhtml">Clever_Subscriber_Adminhtml</clever_subscriber>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <customer>
                <children>
                    <items>
                        <title>Observed Products</title>
                        <sort_order>10</sort_order>
                        <action>adminhtml/subscribers/</action>
                    </items>
                </children>
            </customer>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <Clever_Subscriber>
                            <title>Subscriber Module</title>
                            <sort_order>10</sort_order>
                        </Clever_Subscriber>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <employee>
                    <file>subscribers.xml</file>
                </employee>
            </updates>
        </layout>
    </adminhtml>
</config>
